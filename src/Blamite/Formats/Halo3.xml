<?xml version="1.0" encoding="utf-8" ?>
<layouts>
  <!-- Map header (minus version info) -->
  <layout for="header">
    <uint32 name="file size" offset="0x8" />
    <uint32 name="index header address" offset="0x10" />
    <uint32 name="eof index offset plus string data size" offset="0x14" /> <!-- file size - locale offset magic + string data size -->
    <uint32 name="virtual size" offset="0x18" />
    <int16 name="type" offset="0x13C" />

    <int32 name="string table count" offset="0x158" />
    <int32 name="string table size" offset="0x15C" />
    <int32 name="string index table offset" offset="0x160" />
    <int32 name="string table offset" offset="0x164" />
    
    <asciiz name="internal name" offset="0x18C" />
    <asciiz name="scenario name" offset="0x1B0" />

    <int32 name="file table count" offset="0x2B4" />
    <int32 name="file table offset" offset="0x2B8" />
    <int32 name="file table size" offset="0x2BC" />
    <int32 name="file index table offset" offset="0x2C0" />
    
    <uint32 name="virtual base address" offset="0x2E8" />
    <uint32 name="xdk version" offset="0x2EC" />
    <array name="partitions" offset="0x2F0" count="6" entrySize="0x8">
      <uint32 name="load address" offset="0x0" />
      <uint32 name="size" offset="0x4" />
    </array>
    <uint32 name="raw table offset" offset="0x470" />
    <uint32 name="locale offset magic" offset="0x478" />
	  <uint32 name="string offset magic" offset="0x47C" />
	  <uint32 name="string data size" offset="0x480" />
    <uint32 name="raw table size" offset="0x488" />
    <uint32 name="eof index offset plus string data size" offset="0x14" /> <!-- file size - locale offset magic + string data size -->
    <uint32 name="virtual size" offset="0x490" />
	  <uint32 name="locale data index offset" offset="0x494" />
	  <uint32 name="locale data size" offset="0x498" />
  </layout>

  <!-- Index table header -->
  <layout for="index header">
    <int32 name="number of classes" offset="0x0" />
    <uint32 name="class table address" offset="0x4" />
    <int32 name="number of tags" offset="0x8" />
    <uint32 name="tag table address" offset="0xC" />
    <int32 name="number of important classes" offset="0x10" />
    <uint32 name="important class table address" offset="0x14" />
    <int32 name="magic" offset="0x24" />
  </layout>

  <!-- Class table entry -->
  <layout for="class entry" size="0x10">
    <int32 name="magic" offset="0x0" />
    <int32 name="parent magic" offset="0x4" />
    <int32 name="grandparent magic" offset="0x8" />
    <uint32 name="stringid" offset="0xC" />
  </layout>

  <!-- Tag table entry -->
  <layout for="tag entry" size="0x8">
    <int16 name="class index" offset="0x0" />
    <uint16 name="datum index salt" offset="0x2" />
    <uint32 name="memory address" offset="0x4"/>
  </layout>

  <layout for="matg">
    <array name="languages" offset="0x1C4" entrySize="0x44" count="12">
      <uint32 name="string count" offset="0x0" />
      <uint32 name="locale table size" offset="0x4" />
      <uint32 name="locale index table offset" offset="0x8" />
      <uint32 name="locale data index offset" offset="0xC" />
      <raw name="index table hash" offset="0x10" size="0x14" />
      <raw name="string data hash" offset="0x24" size="0x14" />
    </array>
  </layout>

  <layout for="locale index table entry">
    <uint32 name="stringid" offset="0x0" />
    <uint32 name="offset" offset="0x4" />
  </layout>

  <layout for="reflexive">
    <int32 name="entry count" offset="0x0" />
    <uint32 name="pointer" offset="0x4" />
  </layout>

  <layout for="tag reference">
    <int32 name="class magic" offset="0x0" />
    <uint32 name="datum index" offset="0xC" />
  </layout>

  <layout for="data reference">
    <int32 name="size" offset="0x0" />
    <uint32 name="pointer" offset="0xC" />
  </layout>

	<!-- Scenario meta (4 garrett frum boxxy) -->
	<layout for="scnr">
		<int32 name="number of script objects" offset="0xB0" />
		<uint32 name="script object table address" offset="0xB4" />

		<int32 name="script string table size" offset="0x3e0" />						
		<uint32 name="script string table address" offset="0x3ec" />				

		<int32 name="number of scripts" offset="0x3f4" />										
		<uint32 name="script table address" offset="0x3f8" />								

		<int32 name="number of script globals" offset="0x400" />						
		<uint32 name="script global table address" offset="0x404" />				

		<int32 name="number of script expressions" offset="0x4a4" />				
		<uint32 name="script expression table address" offset="0x4a8" />		
	</layout>

	<layout for="script object entry" size="0x24">
		<asciiz name="name" offset="0x0" />
		<int16 name="type" offset="0x20" />
		<int16 name="placement index" offset="0x22" />
	</layout>

	<layout for="script entry" size="0x34">
		<asciiz name="name" offset="0x0" />
		<int16 name="execution type" offset="0x20" />
		<int16 name="return type" offset="0x22" />
		<int32 name="first expression index" offset="0x24" />
		<int32 name="number of parameters" offset="0x28" />
		<uint32 name="address of parameter list" offset="0x2C" />
		<uint32 name="unknown" offset="0x30" />
	</layout>

  <layout for="script parameter entry" size="0x24">
		<asciiz name="name" offset="0x0" />
		<int16 name="type" offset="0x20" />
	</layout>

	<layout for="script global entry" size="0x28">
		<asciiz name="name" offset="0x0" />
		<int16 name="type" offset="0x20" />
		<uint32 name="expression index" offset="0x24" />
	</layout>

	<layout for="script expression entry" size="0x18">
		<uint16 name="datum index salt" offset="0x0" />
		<uint16 name="opcode" offset="0x2" />
		<int16 name="value type" offset="0x4" />
		<int16 name="expression type" offset="0x6" />
		<uint32 name="next expression index" offset="0x8" />
		<uint32 name="string table offset" offset="0xC" />
		<uint32 name="value" offset="0x10" />
		<int16 name="source line" offset="0x14" />
	</layout>

  <!-- zone (cache_file_resource_gestalt) -->
  <layout for="resource gestalt">
    <int32 name="number of resource types" offset="0x4" />
    <uint32 name="resource type table address" offset="0x8" />

    <int32 name="number of resources" offset="0x58" />
    <uint32 name="resource table address" offset="0x5C" />

    <int32 name="number of general zone sets" offset="0x64" />
    <uint32 name="general zone set table address" offset="0x68" />
    <int32 name="number of global zone sets" offset="0x70" />
    <uint32 name="global zone set table address" offset="0x74" />
    <int32 name="number of unattached zone sets" offset="0x88" />
    <uint32 name="unattached zone set table address" offset="0x8C" />
    <int32 name="number of disc forbidden zone sets" offset="0x94" />
    <uint32 name="disc forbidden zone set table address" offset="0x98" />
    <int32 name="number of disc always streaming zone sets" offset="0xA0" />
    <uint32 name="disc always streaming zone set table address" offset="0xA4" />
    <int32 name="number of bsp zone sets" offset="0xAC" />
    <uint32 name="bsp zone set table address" offset="0xB0" />
    <int32 name="number of bsp 2 zone sets" offset="0xB8" />
    <uint32 name="bsp 2 zone set table address" offset="0xBC" />
    <int32 name="number of bsp 3 zone sets" offset="0xC4" />
    <uint32 name="bsp 3 zone set table address" offset="0xC8" />
    <int32 name="number of cinematic zone sets" offset="0xD0" />
    <uint32 name="cinematic zone set table address" offset="0xD4" />
    <int32 name="number of custom zone sets" offset="0xDC" />
    <uint32 name="custom zone set table address" offset="0xE0" />

    <int32 name="resource info buffer size" offset="0x13C" />
    <uint32 name="resource info buffer address" offset="0x148" />
  </layout>

  <!-- Reflexive at 0x4 in zone -->
  <layout for="resource type entry" size="0x1C">
    <raw name="guid" offset="0x0" size="0x10" />
    <uint32 name="name stringid" offset="0x18" />
  </layout>

  <!-- Reflexive at 0x58 in zone -->
  <layout for="resource table entry" size="0x40">
    <int32 name="parent tag class magic" offset="0x0" />
    <uint32 name="parent tag datum index" offset="0xC" />
    <uint16 name="datum index salt" offset="0x10" />
    <sbyte name="resource type index" offset="0x12" />
    <byte name="flags" offset="0x13" />
    <int32 name="resource info offset" offset="0x14" />
    <int32 name="resource info size" offset="0x18" />
    <int32 name="unknown 1" offset="0x1C" />
    <int32 name="unknown 2" offset="0x20" />
    <int16 name="segment index" offset="0x22" />
    <uint32 name="unknown 3" offset="0x24" />
    <int32 name="number of resource fixups" offset="0x28" />
    <uint32 name="resource fixup table address" offset="0x2C" />
    <int32 name="number of definition fixups" offset="0x34" />
    <uint32 name="definition fixup table address" offset="0x38" />
  </layout>

  <!-- Reflexive at 0x28 in resource table entry -->
  <layout for="resource fixup entry" size="0x8">
    <int32 name="offset" offset="0x0" />
    <uint32 name="address" offset="0x4" />
  </layout>

  <!-- Reflexive at 0x34 in resource table entry -->
  <layout for="definition fixup entry" size="0x8">
    <int32 name="offset" offset="0x0" />
    <int32 name="type index" offset="0x4" />
  </layout>

  <layout for="zone set definition" size="0xA0">
    <int32 name="number of raw pool bitfields" offset="0x0" />
    <uint32 name="raw pool bitfield table address" offset="0x4" />

    <int32 name="number of raw pool 2 bitfields" offset="0x18" />
    <uint32 name="raw pool 2 bitfield table address" offset="0x1C" />

    <int32 name="number of raw pool 3 bitfields" offset="0x24" />
    <uint32 name="raw pool 3 bitfield table address" offset="0x28" />

    <uint32 name="name stringid" offset="0x44" />

    <int32 name="number of tag bitfields" offset="0x54" />
    <uint32 name="tag bitfield table address" offset="0x58" />

    <int32 name="number of tag 2 bitfields" offset="0x60" />
    <uint32 name="tag 2 bitfield table address" offset="0x64" />
  </layout>

  <!-- play (cache_file_resource_layout_table) -->
  <layout for="resource layout table">
    <int32 name="number of external cache files" offset="0xC" />
    <uint32 name="external cache file table address" offset="0x10" />

    <int32 name="number of raw pages" offset="0x18" />
    <uint32 name="raw page table address" offset="0x1C" />

    <int32 name="number of raw segments" offset="0x30" />
    <uint32 name="raw segment table address" offset="0x34" />
  </layout>

  <!-- Reflexive at 0xC in play -->
  <layout for="external cache file table entry" size="0x108">
    <asciiz name="map path" offset="0x0" />
  </layout>

  <!-- Reflexive at 0x18 in play -->
  <layout for="raw page table entry" size="0x58">
    <uint16 name="salt" offset="0x0" />
    <byte name="flags" offset="0x2" />
    <sbyte name="compression codec index" offset="0x3" />
    <int16 name="shared cache file index" offset="0x4" />
    <int16 name="unknown 1" offset="0x6" />
    <int32 name="compressed block offset" offset="0x8" />
    <int32 name="compressed block size" offset="0xC" />
    <int32 name="uncompressed block size" offset="0x10" />
    <uint32 name="checksum" offset="0x14" />
    <raw name="hash 1" offset="0x18" size="0x14" />
    <raw name="hash 2" offset="0x2C" size="0x14" />
    <raw name="hash 3" offset="0x40" size="0x14" />
    <int16 name="unknown 2" offset="0x54" />
    <int16 name="unknown 3" offset="0x56" />
  </layout>

  <!-- Reflexive at 0x30 in play -->
  <layout for="raw segment table entry" size="0x10">
    <int16 name="primary page index" offset="0x0" />
    <int16 name="secondary page index" offset="0x2" />
    <int32 name="primary offset" offset="0x4" />
    <int32 name="secondary offset" offset="0x8" />
    <int16 name="primary unknown" offset="0xC" />
    <int16 name="secondary unknown" offset="0xE" />
  </layout>
	
  <!-- unic (multilingual_unicode_string_list) -->
  <layout for="unic">
    <array name="language ranges" offset="0x20" entrySize="0x4" count="12">
      <int16 name="range start index" offset="0x0" />
      <int16 name="range size" offset="0x2" />
    </array>
  </layout>
</layouts>