<UserControl x:Class="Assembly.Metro.Controls.AvalonDockMetro.Vectors.VTabGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="14" Height="13">
	<Grid>
		<StackPanel Orientation="Horizontal">
			<Rectangle Width="7">
				<Rectangle.Fill>
					<LinearGradientBrush EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="1,0">
						<GradientStop Color="#FF0079CB"/>
						<GradientStop Color="#FF1D98EB" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
			<Rectangle Width="7">
				<Rectangle.Fill>
					<LinearGradientBrush EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="1,0">
						<GradientStop Color="#FF0079CB"/>
						<GradientStop Color="#FF1D98EB" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>
		</StackPanel>

		<Rectangle Fill="#232324" HorizontalAlignment="Left" Width="5" Margin="1,3,1,1"/>
		<Rectangle Fill="#232324" HorizontalAlignment="Right" Width="5" Margin="1,3,1,1"/>
	</Grid>
</UserControl>