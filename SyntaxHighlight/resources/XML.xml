<?xml version="1.0" encoding="utf-8" ?>

<Syntax name="XML">
  <HighlightWordsRule name="Reserved language words">
    <Words>
      float32 float vector3 int16 int32 int64 uint16 uint32 comment
      uint64 enum8 enum16 enum32 option bitfield8 bitfield16 bitfield32 bit
      raw revisions range undefined stringid tagref range ascii dataref reflexive 
      color8 colour8 color16 colour16 color24 colour24 color32 colour32 colorf colourf
    </Words>
    <IgnoreCase>true</IgnoreCase>
    <Foreground>#3987d6</Foreground>
    <FontWeight>Normal</FontWeight>
    <FontStyle>Normal</FontStyle>
  </HighlightWordsRule>

  <HighlightWordsRule name="Internal Options">
    <Words>
      offset length size visible name value index author version game version entrysize 
    </Words>
    <IgnoreCase>true</IgnoreCase>
    <Foreground>#92caf4</Foreground>
    <FontWeight>Normal</FontWeight>
    <FontStyle>Normal</FontStyle>
  </HighlightWordsRule>

