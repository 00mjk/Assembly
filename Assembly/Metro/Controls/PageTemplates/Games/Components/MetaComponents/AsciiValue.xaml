<UserControl x:Class="Assembly.Metro.Controls.PageTemplates.Games.Components.MetaComponents.AsciiValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="40" Width="580"
             HorizontalAlignment="Left">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="lblValueName" Text="{Binding Path=Name}" ToolTip="{Binding Path=Name}" Style="{DynamicResource GenericTextblock}" Width="180" VerticalAlignment="Center" Margin="0,0,0,0" TextTrimming="CharacterEllipsis"/>
            <TextBox x:Name="txtValue" Height="24" Text="{Binding Path=Value}" MaxLength="{Binding Path=Length}" VerticalAlignment="Center" Width="200" Padding="0,0,0,0" Margin="20,0,0,0" />
            <TextBlock x:Name="lblType" Text="ascii" Style="{DynamicResource GenericTextblock}" VerticalAlignment="Center" Width="150" Margin="20,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
