<UserControl 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Assembly.Metro.Controls.PageTemplates.PatchControl" 
             mc:Ignorable="d" 
             Background="#28282b"
             d:DesignWidth="1200" d:DesignHeight="600">
    <Grid>
        <Image Source="/Assembly;component/Metro/Images/super_patcher.png" OpacityMask="#FF7A7A7A" Opacity="0.05" Margin="199,0,0,-60" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="428" Width="510" RenderTransformOrigin="0.5,0.5" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="15.608"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Grid x:Name="sideBar" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="300" Background="#2d2d30">
            <Rectangle Fill="#FF545456" Width="2" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Right" d:LayoutOverrides="Height" />

            <TextBlock FontFamily="{DynamicResource MetroFontLight}" Text="Assembly Patches" Foreground="White" FontSize="32" Margin="25,36.5,13,0" Height="50" VerticalAlignment="Top" />
            <ed:RegularPolygon Fill="#FF4A4A4C" HorizontalAlignment="Left" Height="19" InnerRadius="1" Margin="-16,51,0,0" PointCount="3" Stretch="Fill" VerticalAlignment="Top" Width="48" RenderTransformOrigin="0.5,0.5">
                <ed:RegularPolygon.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ed:RegularPolygon.RenderTransform>
            </ed:RegularPolygon>

            <Rectangle Fill="#FF363639" Height="1" Width="250" Margin="25,110.25,25,0" VerticalAlignment="Top" d:LayoutOverrides="Height" />
            <ScrollViewer HorizontalAlignment="Left" Height="444" Margin="25,132,0,24" Width="250" VerticalScrollBarVisibility="Auto">
                
            </ScrollViewer>
        </Grid>
        <TabControl HorizontalAlignment="Stretch" Margin="305,10,0,0" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}">
            <TabItem Header="Patch Browser" Height="22" VerticalAlignment="Top" Style="{StaticResource MetroHeaderTabItemSub}" >
                <Grid>
                    <TabControl HorizontalAlignment="Stretch" Margin="10,10,0,0" VerticalAlignment="Stretch" BorderBrush="{x:Null}" BorderThickness="0" Background="{x:Null}">
                        <TabItem Header="Online Browser" Style="{StaticResource MetroHeaderTabItemSub}" >
                            <Grid>
                                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="this tab contains two browsers in it, an online file browser for the xbox chaos download manager, as well as a local file browswer so you can view your own patches. ones that are downloaded here will go to a patch folder set in settings. and the browser will only display patches in that folder. maybe have click and drag so you can manually add patches in that were obtained through other means." VerticalAlignment="Top" Foreground="White" Width="610"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Local Browser" Style="{StaticResource MetroHeaderTabItemSub}" >
                            <Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Create Patch" Style="{StaticResource MetroHeaderTabItemSub}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,10,10,10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Vertical">
                                <TextBlock VerticalAlignment="Center" Margin="0,5,0,0" HorizontalAlignment="Left" Width="130" TextWrapping="Wrap" Text="Patch Name:" Foreground="White" FontFamily="{DynamicResource MetroFontRegular}"/>
                                <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="23" Margin="140,-20,0,0" TextWrapping="Wrap" Text="" Name="Patch_Name"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                                <TextBlock VerticalAlignment="Top" Margin="0,5,0,0" HorizontalAlignment="Left" Width="130" TextWrapping="Wrap" Text="Patch Description:" Foreground="White" FontFamily="{DynamicResource MetroFontRegular}"/>
                                <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="57" Margin="140,-20,0,0" TextWrapping="Wrap" Text=""/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                                <TextBlock VerticalAlignment="Center" Margin="0,5,0,0" HorizontalAlignment="Left" Width="130" TextWrapping="Wrap" Text="Modified Map:" Foreground="White" FontFamily="{DynamicResource MetroFontRegular}"/>
                                <TextBox x:Name="txtCreateModifiedMap" IsReadOnly="True" HorizontalAlignment="Stretch" Height="23" Margin="140,-20,30,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
                                <Button Content="..." HorizontalAlignment="Right" Height="23" Margin="0,-23,0,0" VerticalAlignment="Center" Width="23" />
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                                <TextBlock VerticalAlignment="Center" Margin="0,5,0,0" HorizontalAlignment="Left" Width="130" TextWrapping="Wrap" Text="Clean (Original) Map:" Foreground="White" FontFamily="{DynamicResource MetroFontRegular}"/>
                                <TextBox x:Name="txtCreateUnModifiedMap" IsReadOnly="True" HorizontalAlignment="Stretch" Height="23" Margin="140,-20,30,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
                                <Button Content="..." HorizontalAlignment="Right" Height="23" Margin="0,-23,0,0" VerticalAlignment="Center" Width="23"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                                <CheckBox x:Name="cbCreateProtectMap" Content="Protect Map File (Hide all Tagnames)" />
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" Margin="0,12,0,0">
                                <CheckBox x:Name="cbCreateCustomMap" Content="Create Custom Map (custom mapinfo and blf files)" />
                            </StackPanel>
                        </StackPanel>    
                        
                        <Expander Header="Other Options"/>

                        <Button Content="Create Patch" HorizontalAlignment="Left" Height="23" Margin="10,156,0,0" VerticalAlignment="Top" Width="655"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Patch Converter" Style="{StaticResource MetroHeaderTabItemSub}">
                <Grid>
                    
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
