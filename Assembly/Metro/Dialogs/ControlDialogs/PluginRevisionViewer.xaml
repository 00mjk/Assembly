                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Expander x:Name="pluginExpander" Header="Plugin Researcher">
                                <StackPanel Margin="15,5,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Researcher:" Width="110" FontSize="13" />
                                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Researcher}" FontSize="13" Foreground="{DynamicResource ExtryzeAccentBrushSecondary}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Revision Number:" Width="110" FontSize="13" />
                                        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Version}" FontSize="13" Foreground="{DynamicResource ExtryzeAccentBrushSecondary}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                                        <TextBlock Text="Description:" Width="110" FontSize="13" HorizontalAlignment="Left" />
                                        <TextBlock Margin="0,0,0,0" TextWrapping="WrapWithOverflow" Text="{Binding Description}" FontSize="13" Foreground="{DynamicResource ExtryzeAccentBrushSecondary}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Content="OK" HorizontalAlignment="Right" Margin="0,20,40,6" Width="70" Click="btnActionClose_Click"/>
            </StackPanel>
